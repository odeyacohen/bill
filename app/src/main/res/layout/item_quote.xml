<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="4dp"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textViewQuoteTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Titre du devis"
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewQuoteTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Montant : 0â‚¬"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginTop="4dp" />
        <TextView
            android:id="@+id/textViewQuoteDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date : "
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/textViewQuoteClientId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Client ID : 0"
            android:textSize="14sp"
            android:textColor="#888888"
            android:layout_marginTop="2dp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
